<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.isaac.webtrigger.NewPR"
    >
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/newPR">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentStart="true"
            android:width="100px"
            android:layout_alignParentEnd="true"
            android:text="Name"
            android:inputType="text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:id="@+id/url"
            android:text="URL"
            android:inputType="textUri"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/name" />



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_action_new_dark"
            android:id="@+id/button_header_add"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="addHeader"
            android:layout_below="@+id/url"
            android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_header_delete"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="deleteHeader"
        android:drawableTop="@drawable/ic_action_discard"
        android:layout_below="@+id/button_header_add" />


</RelativeLayout>
    </ScrollView>
